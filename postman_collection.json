{
    "info": {
        "name": "Elasticsearch Autocomplete Service",
        "description": "Complete API collection for Elasticsearch Autocomplete Service with Logstash",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "_exporter_id": "12345"
    },
    "item": [
        {
            "name": "Health Check",
            "item": [
                {
                    "name": "Check API Health",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/search/health",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "search", "health"]
                        },
                        "description": "Check the health status of the API and Elasticsearch connection"
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Products",
            "item": [
                {
                    "name": "Autocomplete Products",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/search/products/autocomplete?q=apple&size=10",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "search", "products", "autocomplete"],
                            "query": [
                                {
                                    "key": "q",
                                    "value": "apple",
                                    "description": "Search query string"
                                },
                                {
                                    "key": "size",
                                    "value": "10",
                                    "description": "Number of results to return"
                                }
                            ]
                        },
                        "description": "Search products with autocomplete functionality using edge_ngram tokenizer"
                    },
                    "response": []
                },
                {
                    "name": "Suggest Products",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/search/products/suggest?q=app&size=5",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "search", "products", "suggest"],
                            "query": [
                                {
                                    "key": "q",
                                    "value": "app",
                                    "description": "Search query prefix"
                                },
                                {
                                    "key": "size",
                                    "value": "5",
                                    "description": "Number of suggestions"
                                }
                            ]
                        },
                        "description": "Fast product suggestions using Elasticsearch completion suggester"
                    },
                    "response": []
                },
                {
                    "name": "Advanced Search - Basic",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"query\": \"apple\",\n  \"size\": 10,\n  \"from\": 0\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/search/products/advanced",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "search", "products", "advanced"]
                        },
                        "description": "Basic advanced search for products"
                    },
                    "response": []
                },
                {
                    "name": "Advanced Search - With Filters",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"query\": \"smartphone\",\n  \"filters\": {\n    \"category\": \"electronics\",\n    \"price\": {\n      \"gte\": 100,\n      \"lte\": 1000\n    }\n  },\n  \"size\": 10,\n  \"from\": 0,\n  \"sort\": [\n    {\n      \"price\": \"asc\"\n    }\n  ]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/search/products/advanced",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "search", "products", "advanced"]
                        },
                        "description": "Advanced search with category filter and price range"
                    },
                    "response": []
                },
                {
                    "name": "Advanced Search - Multiple Categories",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"query\": \"apple\",\n  \"filters\": {\n    \"category\": [\"electronics\", \"audio\"]\n  },\n  \"size\": 20,\n  \"from\": 0,\n  \"sort\": [\n    {\n      \"_score\": \"desc\"\n    },\n    {\n      \"price\": \"asc\"\n    }\n  ]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/search/products/advanced",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "search", "products", "advanced"]
                        },
                        "description": "Search products in multiple categories with sorting"
                    },
                    "response": []
                }
            ]
        },
        {
