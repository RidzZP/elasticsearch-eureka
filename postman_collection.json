                    "name": "Get Products Index Mapping",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "http://localhost:9400/products/_mapping",
                            "protocol": "http",
                            "host": ["localhost"],
                            "port": "9400",
                            "path": ["products", "_mapping"]
                        },
                        "description": "Get mapping for products index"
                    },
                    "response": []
                },
                {
                    "name": "Search Products Directly",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"query\": {\n    \"match\": {\n      \"name\": \"apple\"\n    }\n  }\n}"
                        },
                        "url": {
                            "raw": "http://localhost:9400/products/_search",
                            "protocol": "http",
                            "host": ["localhost"],
                            "port": "9400",
                            "path": ["products", "_search"]
                        },
                        "description": "Direct Elasticsearch search on products index"
                    },
                    "response": []
                }
            ]
        }
    ],
