                        "url": {
                            "raw": "{{baseUrl}}/api/v1/search/users/advanced",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "search", "users", "advanced"]
                        },
                        "description": "Basic advanced search for users"
                    },
                    "response": []
                },
                {
                    "name": "Advanced Search Users - With Sorting",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"query\": \"john\",\n  \"filters\": {},\n  \"size\": 20,\n  \"from\": 0,\n  \"sort\": [\n    {\n      \"username\": \"asc\"\n    }\n  ]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/search/users/advanced",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "search", "users", "advanced"]
                        },
                        "description": "Advanced user search with sorting by username"
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Elasticsearch Direct",
            "item": [
                {
                    "name": "Check Elasticsearch Health",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "http://localhost:9400/_cluster/health",
                            "protocol": "http",
                            "host": ["localhost"],
                            "port": "9400",
                            "path": ["_cluster", "health"]
                        },
                        "description": "Check Elasticsearch cluster health directly"
                    },
                    "response": []
                },
                {
                    "name": "List All Indices",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "http://localhost:9400/_cat/indices?v",
                            "protocol": "http",
                            "host": ["localhost"],
                            "port": "9400",
                            "path": ["_cat", "indices"],
                            "query": [
                                {
                                    "key": "v",
                                    "value": null
